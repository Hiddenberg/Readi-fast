{
   "name": "Readi-fast",
   "description": "Extension created to help users read faster, improve focus and readability",
   "version": "1.0",
   "manifest_version": 3,
   "icons": {
      "16": "./icons/16.png",
      "24": "./icons/24.png",
      "32": "./icons/32.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
   },
   "background": {
     "service_worker": "background.js"
   },
   "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_title": "Readi-fast",
      "default_icon": {
        "16": "./icons/16.png",
        "24": "./icons/24.png",
        "32": "./icons/32.png",
        "48": "./icons/48.png",
        "128": "./icons/128.png"
      }
   }
 }